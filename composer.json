{
	"name": "saschaegerer/phpstan-typo3",
	"description": "TYPO3 CMS class reflection extension for PHPStan",
	"keywords": [
		"static analysis"
	],
	"license": [
		"MIT"
	],
	"type": "phpstan-extension",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"prefer-source": true,
	"require": {
		"php": "^8.2",
		"ext-simplexml": "*",
		"phpstan/phpstan": "^2.1",
		"typo3/cms-core": "^14.0",
		"typo3/cms-extbase": "^14.0",
		"bnf/phpstan-psr-container": "^1.0",
		"composer/semver": "^3.4",
		"ssch/typo3-debug-dump-pass": "dev-feature/typo3-14-compatibility"
	},
	"require-dev": {
		"consistence-community/coding-standard": "^3.11",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"php-parallel-lint/php-parallel-lint": "^1.4",
		"phing/phing": "^2.17",
		"phpstan/phpstan-strict-rules": "^2.0",
		"phpstan/phpstan-phpunit": "^2.0.3",
		"phpunit/phpunit": "^11.5"
	},
	"repositories": {
		"typo3-debug-dump-pass": {
			"type": "git",
			"url": "https://github.com/chrissonntag/typo3-debug-dump-pass.git"
		}
	},
	"autoload": {
		"psr-4": {
			"SaschaEgerer\\PhpstanTypo3\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"SaschaEgerer\\PhpstanTypo3\\Tests\\": "tests/"
		},
		"files": [
			"tests/Unit/Type/data/repository-stub-files.php",
			"tests/Unit/Type/data/object-storage-stub-files.php",
			"tests/Unit/Type/data/query-factory-stub-files.php",
			"tests/Unit/Type/data/custom-query-type.php",
			"tests/Unit/Type/data/context-get-aspect-return-types.php",
			"tests/Unit/Type/data/request-get-attribute-return-types.php",
			"tests/Unit/Type/data/site-get-attribute-return-types.php",
			"tests/Unit/Type/QueryResultToArrayDynamicReturnTypeExtension/data/query-result-to-array.php",
			"tests/Unit/Type/MathUtilityTypeSpecifyingExtension/data/MathUtilityType.php",
			"tests/Unit/Type/DateTimeAspectGetDynamicReturnTypeExtension/data/datetime-aspect-get-return-types.php",
			"tests/Unit/Type/UserAspectGetDynamicReturnTypeExtension/data/user-aspect-get-return-types.php",
			"tests/Unit/Type/GeneralUtilityGetIndpEnvDynamicReturnTypeExtension/data/GeneralUtilityGetIndpEnv.php",
			"tests/Unit/Type/PropertyMapperReturnTypeExtension/data/property-converter-types.php"
		]
	},
	"extra": {
		"phpstan": {
			"includes": [
				"extension.neon"
			]
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		}
	},
	"scripts": {
		"test": [
			"@test:phpunit",
			"@test:phpstan",
			"@test:php-cs",
			"@test:php-lint"
		],
		"test:phpunit": "phpunit --colors=always tests/",
		"test:phpstan": "phpstan --memory-limit=2G",
		"test:php-cs": "phpcs",
		"test:php-lint": "parallel-lint src tests",
		"fix": [
			"@fix:php-cs"
		],
		"fix:php-cs": "phpcbf"
	}
}
